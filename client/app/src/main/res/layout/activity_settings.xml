            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    
    </RelativeLayout>
    
    <include layout="@layout/view_horizontal_line" />
    
    <RelativeLayout
