<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:paddingHorizontal="@dimen/padding_settings_list"
    tools:context=".ui.activities.SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_settings_list" >
        
        <TextView
            android:id="@+id/title_life_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/life_story_title"
            android:paddingBottom="@dimen/padding_settings_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@id/switch_life_story"
            android:layout_toLeftOf="@id/switch_life_story"
            android:layout_alignParentTop="true" />
        
        <TextView
            android:id="@+id/description_life_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/life_story_description"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@id/switch_life_story"
            android:layout_toLeftOf="@id/switch_life_story"
            android:layout_below="@id/title_life_story" />
        
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_life_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        
    </RelativeLayout>
    
    <include layout="@layout/view_horizontal_line" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_settings_list" >
        
        <TextView
            android:id="@+id/title_family_tree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/family_tree_title"
            android:paddingBottom="@dimen/padding_settings_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@id/switch_family_tree"
            android:layout_toLeftOf="@id/switch_family_tree"
            android:layout_alignParentTop="true" />
        
        <TextView
            android:id="@+id/description_family_tree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/family_tree_description"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@id/switch_family_tree"
